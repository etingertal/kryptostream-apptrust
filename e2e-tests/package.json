{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests using Cypress",
  "scripts": {
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "test": "cypress run --spec 'cypress/e2e/**/*.cy.js'",
    "test:fast": "cypress run --reporter json --reporter-options outputFile=cypress-results.json --spec 'cypress/e2e/**/*.cy.js' --headless",
    "convert-results": "node convert-cypress-results.js",
    "convert-to-markdown": "./convert-cypress-report.sh",
    "test-and-report": "npm run test:fast && npm run convert-to-markdown"
  },
  "devDependencies": {
    "cypress": "^13.6.0"
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}
