{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "E2E tests using Cypress",
  "scripts": {
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "test": "cypress run --spec 'cypress/e2e/**/*.cy.js'",
    "test:fast": "cypress run --reporter json --reporter-options outputFile=cypress-results.json --spec 'cypress/e2e/**/*.cy.js' --headless",
    "cy:run": "cypress run",
    "cy:report": "mochawesome-merge cypress/results/mochawesome/*.json > cypress/results/combined-report.json",
    "cy:test-and-report": "npm run cy:run && npm run cy:report",
    "convert-results": "node convert-cypress-results.js",
    "convert-to-markdown": "./convert-cypress-report.sh",
    "test-and-report": "npm run test:fast && npm run convert-to-markdown"
  },
  "devDependencies": {
    "cypress": "^13.6.0",
    "mocha-junit-reporter": "^2.2.1",
    "mocha-multi-reporters": "^1.5.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}
